<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".FilterActivity">
	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@android:color/white">
		<ScrollView android:layout_width="match_parent"
			android:layout_above="@id/bottomBar"
			android:layout_height="match_parent">


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="20sp"
					android:paddingRight="20sp"
					android:paddingTop="10sp"
					android:paddingBottom="10sp"
					android:layout_margin="15sp"
					android:text="Advanced Filter"
					android:layout_gravity="center"/>
				<EditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="20sp"
					android:paddingRight="20sp"
					android:paddingTop="10sp"
					android:paddingBottom="10sp"
					android:layout_margin="15sp"
					android:hint="Search text"
					android:background="@drawable/search_view_edittext"
					android:textSize="14sp"
					android:id="@+id/filter_text_edit_text"/>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="15sp"
						android:text="Overall star"/>
				</RelativeLayout>

				<RadioGroup
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginRight="15sp"
					android:layout_marginLeft="15sp"
					android:layout_marginBottom="15sp"
					android:id="@+id/over_all_star_filter_radio_group"
					android:orientation="horizontal"
					android:weightSum="6"
					android:checkedButton="@id/os_all"
					android:background="@drawable/importancy_group_background">
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:padding="10sp"
						android:textStyle="bold"
						android:gravity="center"
						android:textColor="@color/importancy_button"
						android:background="@drawable/importancy_button_background"
						android:button="@null"
						android:id="@+id/os_all"
						android:text="All"/>
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:padding="10sp"
						android:textStyle="bold"
						android:gravity="center"
						android:textColor="@color/importancy_button"
						android:background="@drawable/importancy_button_background"
						android:button="@null"
						android:id="@+id/os1"
						android:text="1"/>
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:padding="10sp"
						android:textStyle="bold"
						android:gravity="center"
						android:textColor="@color/importancy_button"
						android:background="@drawable/importancy_button_background"
						android:button="@null"
						android:id="@+id/os2"
						android:text="2"/>
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:padding="10sp"
						android:textStyle="bold"
						android:gravity="center"
						android:textColor="@color/importancy_button"
						android:background="@drawable/importancy_button_background"
						android:button="@null"
						android:id="@+id/os3"
						android:text="3"/>
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:padding="10sp"
						android:textStyle="bold"
						android:gravity="center"
						android:textColor="@color/importancy_button"
						android:background="@drawable/importancy_button_background"
						android:button="@null"
						android:id="@+id/os4"
						android:text="4"/>
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:padding="10sp"
						android:textStyle="bold"
						android:gravity="center"
						android:textColor="@color/importancy_button"
						android:background="@drawable/importancy_button_background"
						android:button="@null"
						android:id="@+id/os5"
						android:text="5"/>
				</RadioGroup>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="User Filter"
					android:padding="15sp"
					android:textSize="22sp"/>


				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="15sp"
						android:text="Favourite"/>
				</RelativeLayout>

				<RadioGroup
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginRight="15sp"
					android:layout_marginLeft="15sp"
					android:layout_marginBottom="15sp"
					android:id="@+id/favourite_filter_radio_group"
					android:orientation="horizontal"
					android:checkedButton="@id/fav_all"
					android:weightSum="3"
					android:background="@drawable/importancy_group_background">
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:padding="10sp"
						android:textStyle="bold"
						android:gravity="center"
						android:textColor="@color/importancy_button"
						android:background="@drawable/importancy_button_background"
						android:button="@null"
						android:id="@+id/fav_all"
						android:text="All"/>
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:padding="10sp"
						android:textStyle="bold"
						android:gravity="center"
						android:textColor="@color/importancy_button"
						android:background="@drawable/importancy_button_background"
						android:button="@null"
						android:id="@+id/fav_yes"
						android:text="Yes"/>
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:padding="10sp"
						android:textStyle="bold"
						android:gravity="center"
						android:textColor="@color/importancy_button"
						android:background="@drawable/importancy_button_background"
						android:button="@null"
						android:id="@+id/fav_no"
						android:text="No"/>
				</RadioGroup>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="15sp"
						android:text="Importance"/>
				</RelativeLayout>

				<RadioGroup
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginRight="15sp"
					android:layout_marginLeft="15sp"
					android:layout_marginBottom="15sp"
					android:id="@+id/importance_filter_radio_group"
					android:orientation="horizontal"
					android:weightSum="6"
					android:checkedButton="@id/im_all"
					android:background="@drawable/importancy_group_background">
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:padding="10sp"
						android:textStyle="bold"
						android:gravity="center"
						android:textColor="@color/importancy_button"
						android:background="@drawable/importancy_button_background"
						android:button="@null"
						android:id="@+id/im_all"
						android:text="All"/>
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:padding="10sp"
						android:textStyle="bold"
						android:gravity="center"
						android:textColor="@color/importancy_button"
						android:background="@drawable/importancy_button_background"
						android:button="@null"
						android:id="@+id/ni"
						android:text="NI"/>

					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:padding="10sp"
						android:textStyle="bold"
						android:gravity="center"
						android:textColor="@color/importancy_button"
						android:background="@drawable/importancy_button_background"
						android:button="@null"
						android:id="@+id/i"
						android:text="I"/>
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:padding="10sp"
						android:textStyle="bold"
						android:gravity="center"
						android:textColor="@color/importancy_button"
						android:background="@drawable/importancy_button_background"
						android:button="@null"
						android:id="@+id/vi"
						android:text="VI"/>
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:padding="10sp"
						android:textStyle="bold"
						android:gravity="center"
						android:textColor="@color/importancy_button"
						android:background="@drawable/importancy_button_background"
						android:button="@null"
						android:id="@+id/vvi"
						android:text="VVI"/>
					<RadioButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:padding="10sp"
						android:textStyle="bold"
						android:gravity="center"
						android:textColor="@color/importancy_button"
						android:background="@drawable/importancy_button_background"
						android:button="@null"
						android:id="@+id/vvvi"
						android:text="VVVI" />
				</RadioGroup>
			</LinearLayout>
		</ScrollView>

		<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:id="@+id/bottomBar"
		android:weightSum="2">
			<Button
				android:layout_width="0sp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
				android:text="Done"
				android:id="@+id/search_btn"/>
		</LinearLayout>
	</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>